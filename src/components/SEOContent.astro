const currentDate = new Date().toISOString().split('T')[0];

// HowTo Schema for paint calculation (high-impact SEO for featured snippets)
const howToSchema = {
  "@context": "https://schema.org",
  "@type": "HowTo",
  "name": "How to Calculate Paint Coverage",
  "description": "Step-by-step guide to calculate exactly how much paint you need for your painting project, including wall area calculation, deductions for doors and windows, and coating requirements.",
  "image": "https://paintprocalculator.com/og-image.png",
  "totalTime": "PT5M",
  "estimatedCost": {
    "@type": "MonetaryAmount",
    "currency": "USD",
    "value": "0"
  },
  "supply": [
    { "@type": "HowToSupply", "name": "Tape measure" },
    { "@type": "HowToSupply", "name": "Calculator or paint calculator app" },
    { "@type": "HowToSupply", "name": "Notepad for recording measurements" }
  ],
  "tool": [
    { "@type": "HowToTool", "name": "PaintPro Calculator" }
  ],
  "step": [
    {
      "@type": "HowToStep",
      "name": "Measure Room Dimensions",
      "text": "Measure your room's length, width, and ceiling height in feet. Record each measurement.",
      "position": 1
    },
    {
      "@type": "HowToStep",
      "name": "Calculate Wall Area",
      "text": "Use the formula: Wall Area = 2 × (Length + Width) × Height. For a 12' × 14' room with 8' ceilings: 2 × (12 + 14) × 8 = 416 sq ft.",
      "position": 2
    },
    {
      "@type": "HowToStep",
      "name": "Deduct Openings",
      "text": "Subtract door areas (21 sq ft each) and window areas (15 sq ft standard, 50 sq ft for large/sliding). For 1 door and 2 windows: 21 + 30 = 51 sq ft deduction.",
      "position": 3
    },
    {
      "@type": "HowToStep",
      "name": "Calculate Net Paintable Area",
      "text": "Subtract deductions from wall area: 416 - 51 = 365 sq ft net paintable area.",
      "position": 4
    },
    {
      "@type": "HowToStep",
      "name": "Determine Gallons Needed",
      "text": "Divide net area by paint coverage rate (400 sq ft/gal standard). Multiply by number of coats (2 recommended). 365 ÷ 400 × 2 = 1.825 gallons. Round up to 2 gallons.",
      "position": 5
    },
    {
      "@type": "HowToStep",
      "name": "Add Waste Buffer",
      "text": "Add 10% for touch-ups and coverage variation. Final estimate: 2 gallons for this example room.",
      "position": 6
    }
  ],
  "author": {
    "@type": "Organization",
    "name": "ProBuild Digital LLC"
  },
  "datePublished": "2025-12-26",
  "dateModified": currentDate
